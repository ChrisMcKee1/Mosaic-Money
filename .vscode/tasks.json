{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Aspire: Build AppHost",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "build",
        "src/apphost.cs"
      ],
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Aspire: Run Detached Isolated",
      "type": "shell",
      "command": "aspire",
      "args": [
        "run",
        "--project",
        "src/apphost.cs",
        "--detach",
        "--isolated"
      ],
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Aspire: Wait For API Healthy",
      "type": "shell",
      "command": "aspire",
      "args": [
        "wait",
        "api",
        "--project",
        "src/apphost.cs",
        "--status",
        "healthy",
        "--timeout",
        "180"
      ],
      "problemMatcher": []
    },
    {
      "label": "Aspire: Wait For Worker Up",
      "type": "shell",
