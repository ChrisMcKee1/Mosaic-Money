{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Aspire: Stop AppHost",
      "type": "shell",
      "command": "aspire",
      "args": [
        "stop",
        "--project",
        "src/apphost.cs"
      ],
      "problemMatcher": []
    },
    {
      "label": "Aspire: Build AppHost",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "build",
        "src/apphost.cs"
      ],
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Aspire: Run Detached Isolated",
      "type": "shell",
      "command": "aspire",
      "args": [
        "run",
        "--project",
        "src/apphost.cs",
        "--detach"
      ],
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Aspire: Wait For API Healthy",
      "type": "shell",
      "command": "aspire",
      "args": [
        "wait",
        "api",
        "--project",
        "src/apphost.cs",
        "--status",
        "healthy",
        "--timeout",
        "180"
      ],
      "problemMatcher": []
    },
    {
      "label": "Aspire: Wait For Worker Up",
      "type": "shell",
      "command": "aspire",
      "args": [
        "wait",
        "worker",
        "--project",
        "src/apphost.cs",
        "--status",
        "up",
        "--timeout",
        "180"
      ],
      "problemMatcher": []
    },
    {
      "label": "Aspire: Wait For Web Up",
      "type": "shell",
      "command": "aspire",
      "args": [
        "wait",
        "web",
        "--project",
        "src/apphost.cs",
        "--status",
        "up",
        "--timeout",
        "180"
      ],
      "problemMatcher": []
    },
    {
      "label": "Aspire: Start Stack",
      "dependsOrder": "sequence",
      "dependsOn": [
        "Aspire: Build AppHost",
        "Aspire: Run Detached Isolated",
        "Aspire: Wait For API Healthy",
        "Aspire: Wait For Worker Up",
        "Aspire: Wait For Web Up",
        "Aspire: Show Resources"
      ],
      "problemMatcher": []
    },
    {
